<% if @role.errors.empty? %>

  <% if @tipo_edit == "success" %>
    $("#modal-role").modal('hide');
    $(".tipo_nombre").val("");

    $('table tbody tr#<%= @role.id %>').replaceWith(' <%= j render "row", role: @role %>');

    toastr["<%= @tipo_edit %>"]("<%= @mensaje_edit %>", "<%= @titulo_edit %>", {
        positionClass: "toast-top-right",
        closeButton: "true",
        progressBar: "true",
        preventDuplicates: "true"
    });

  <% else %>

    toastr["<%= @tipo_edit %>"]("<%= @mensaje_edit %>", "<%= @titulo_edit %>", {
        positionClass: "toast-top-right",
        closeButton: "true",
        progressBar: "true",
        preventDuplicates: "true"
    });

  <% end %>

<% else %>
  alert('<% @role.errors.full_messages.each do |msg| %><%= msg %>\n<% end %>');
<% end %>