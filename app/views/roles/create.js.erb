<% if @role.errors.empty? %>

  <% if @tipo == "success" %>
    $("#modal-role").modal('hide');
    $(".tipo_nombre").val("");

    $('table tbody').append(' <%= j render "row", role: @role %>');


    toastr["<%= @tipo %>"]("<%= @mensaje %>", "<%= @titulo %>", {
        positionClass: "toast-top-right",
        closeButton: "true",
        progressBar: "true",
        preventDuplicates: "true"
    });

  <% else %>


    toastr["<%= @tipo %>"]("<%= @mensaje %>", "<%= @titulo %>", {
        positionClass: "toast-top-right",
        closeButton: "true",
        progressBar: "true",
        preventDuplicates: "true"
    });
  <% end %>

<% else %>
  alert('<% @role.errors.full_messages.each do |msg| %><%= msg %>\n<% end %>');
<% end %>