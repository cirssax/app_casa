<div class="modal fade" id="modal-product">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <%=form_for(@product, remote: true) do |f| %>
        <div class="modal-body">
          <div class="row">
            <div class="form-group">
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <%= f.label :nombre_producto %><br>
                <%= f.text_field :nombre_producto, class: "form-control product_nombre", type: "text", placeholder: "Nombre de producto"%>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <%= f.label :stock %>
                <%= f.text_field :stock, class: "form-control product_stock", type: "number", placeholder: "Cantidad guardada"%>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <%= f.label :marca %>
                <%= f.collection_select :marca, Brand.order(:descrip_marca), :id, :descrip_marca,  {:include_blank =>true}, {:class => 'form-control select2 product_marca', style: "width: 100%;"}%>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <%= f.label :tipo %>
                <%= f.collection_select :tipo, Type.order(:descrip_tipo), :id, :descrip_tipo,  {:include_blank =>true}, {:class => 'form-control select2 product_tipo', style: "width: 100%;"}%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <%= f.label :ubicacion %>
                <%= f.text_area :ubicacion, class: "form-control product_ubicacion", type: "text", placeholder: "Ubicacion en la casa"%>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
          <%= f.submit "Guardar", :class=> 'btn btn-primary', :id =>"BtnUsuario" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

