<%if current_user.rol != 3 %>
  <div class="box box-info" id="marca_up">
    <div class="box-header">
      <span>Productos en consumo</span>
      <button class="btn btn-success pull-right" id="Bajar" type="button"><span class="fa fa-plus-circle"></span> Seleccionar</button>
    </div>
    <div class="box-body">
      <div class="row" id="container_requests">
        <%=render @requests %>
      </div>
    </div>
  </div>


  <div class="box box-success" id="punto">
    <div class="box-header">
      <h4>Productos disponibles</h4>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive table table-bordered table-hover">
      <table class="table table-hover" id="tabla">
        <thead>
        <tr>
          <th style="width: 10px" class="text-center">Producto</th>
          <th style="width: 10px" class="text-center">Cantidad</th>
          <th style="width: 10px" class="text-center">Consumir</th>
        </tr>
        </thead>
        <tbody>
        <%@products.each do |product| %>
          <%= render "row", product: product %>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th style="width: 10px" class="text-center">Producto</th>
          <th style="width: 10px" class="text-center">Cantidad</th>
          <th style="width: 10px" class="text-center">Consumir</th>
        </tr>
        </tfoot>
      </table>
    </div>
    <!-- /.box-body -->
  </div>
  <span class="ir-arriba fa fa-arrow-circle-up hidden-lg"></span>
  <div class="row alerta" id="alerta" hidden="hidden">

  </div>
<%else %>
  <section class="content-header">
    <h1>
      404 Error
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="error-page">
      <h2 class="headline text-yellow"> 404</h2>

      <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Pagina no encontrada.</h3>
        <p>
          No se pudo encontrar la p치gina que est치 solicitando.
          Por el momento se puede dirigir a la p치gina de inicio: <%=link_to "volver al dashboard (inicio)", home_index_path %>.
        </p>
        <div class="col-md-12">
          <div class="alert alert-warning alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Alerta!</h4>
            Usted es usuario invitado, no tiene acceso a esta secci칩n
          </div>
        </div>
      </div>
      <!-- /.error-content -->
    </div>
    <!-- /.error-page -->
  </section>
<%end %>