<p class="login-box-msg">Ingresa para acceder a tu sesion</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group has-feedback">
    <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: 'Login' %>
    <span class='glyphicon glyphicon-user form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'ContraseÃ±a' %>
    <span class='glyphicon glyphicon-lock form-control-feedback'></span>
  </div>

  <div class="row">
    <% if devise_mapping.rememberable? -%>
      <div class="col-xs-8">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="col-xs-4">
      <%= f.submit "Acceder", class: 'btn btn-success btn-block btn-flat' %>
    </div>
  </div>
<% end %>
