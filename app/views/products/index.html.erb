<%if current_user.rol != 3 %>
<section class="content-header">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
      <h1>
        Productos
        <small>Listado de productos registrados</small>
      </h1>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      <%=link_to '<span class="fa fa-plus-circle"></span>  Añadir Producto'.html_safe, new_product_path, remote: true ,class: "btn btn-primary pull-right"%>
    </div>
  </div>
</section>
<section class="content">
  <div class="row" id="container_products">
    <%=render @products %>
  </div>
  <span class="ir-arriba fa fa-arrow-circle-up hidden-lg"></span>
  <div class="row alerta" id="alerta" hidden="hidden">

  </div>
</section>
<%else %>
  <section class="content-header">
    <h1>
      404 Error
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="error-page">
      <h2 class="headline text-yellow"> 404</h2>

      <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Pagina no encontrada.</h3>
        <p>
          No se pudo encontrar la página que está solicitando.
          Por el momento se puede dirigir a la página de inicio: <%=link_to "volver al dashboard (inicio)", home_index_path %>.
        </p>
        <div class="col-md-12">
          <div class="alert alert-warning alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Alerta!</h4>
            Usted es usuario invitado, no tiene acceso a esta sección
          </div>
        </div>
      </div>
      <!-- /.error-content -->
    </div>
    <!-- /.error-page -->
  </section>
<%end %>

