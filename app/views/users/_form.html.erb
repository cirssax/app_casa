<div class="modal fade" id="modal-user">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><%= title %></h3>
      </div>

      <%=form_for @user, remote: true do |f| %>
      <div class="modal-body">
        <div class="nav-tabs-custom">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab_1" data-toggle="tab">Datos Personales</a></li>
            <li><a href="#tab_2" data-toggle="tab">Datos de Seguridad</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
              <h4>Datos personales</h4>
              <div class="row">
                <div class="form-group">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <%= f.label :login %>
                    <%= f.text_field :login, class: "form-control user_login", type: "text", placeholder: "login"%>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control user_email", type: "email", placeholder: "correo@example.org"%>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :nombre_usuario %>
                    <%= f.text_field :nombre_usuario, class: "form-control user_nombre", type: "text", placeholder: "Nombre"%>
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :apellidos_usuario %>
                    <%= f.text_field :apellidos_usuario, class: "form-control user_apellido", type: "text", placeholder: "Apellido"%>
                  </div>
                </div>

              </div>
            </div>
            <!-- /.tab-pane -->
            <div class="tab-pane" id="tab_2">
              <h4>Datos de seguridad</h4>
              <div class="row">
                <div class="form-group">
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :rol %><br>
                    <%= f.collection_select :rol, Role.order(:descrip_rol), :id, :descrip_rol,  {:include_blank =>true}, {:class => 'form-control select2 user_rol', style: "width: 100%;"}%>
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :estado %>
                    <%= f.collection_select :estado, State.order(:descrip_estado), :id, :descrip_estado,  {:include_blank =>true}, {:class => 'form-control select2 user_estado', style: "width: 100%;"}%>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password,class: "form-control Pass1", placeholder: "Contraseña", id: "Pass1"%>
                    <small id="ErrorPass1" class="invalid-feedback"></small>
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <%= f.label :Confirme_su_contraseña %><br />
                    <%= f.password_field :password_confirmation,class: "form-control Pass2", placeholder: "Confirmar Contraseña", id: "Pass2"%>
                    <small id="ErrorPass2" class="invalid-feedback"></small>
                  </div>
                </div>
              </div>
            <!-- /.tab-pane -->
            </div>
          <!-- /.tab-content -->
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
        <%= f.submit "Guardar", :class=> 'btn btn-primary', :id =>"BtnTipo" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


