<% if @type.errors.empty? %>

  <% if @tipo_edit == "success" %>
    $("#modal-type").modal('hide');
    $(".tipo_nombre").val("");

    $('table tbody tr#<%= @type.id %>').replaceWith(' <%= j render "row", type: @type %>');

    toastr["<%= @tipo_edit %>"]("<%= @mensaje_edit %>", "<%= @titulo_edit %>", {
        positionClass: "toast-top-right",
        closeButton: "true",
        progressBar: "true",
        preventDuplicates: "true"
    });

<% else %>

  toastr["<%= @tipo_edit %>"]("<%= @mensaje_edit %>", "<%= @titulo_edit %>", {
      positionClass: "toast-top-right",
      closeButton: "true",
      progressBar: "true",
      preventDuplicates: "true"
  });

<% end %>

<% else %>
  alert('<% @type.errors.full_messages.each do |msg| %><%= msg %>\n<% end %>');
<% end %>