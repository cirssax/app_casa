<aside class="main-sidebar">
  <section class="sidebar">

    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "brand-logo.jpg", class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p><%=current_user.nombre_usuario.titleize%></p>
        <a><i class="fa fa-circle text-success"></i><span>Online</span></a>
      </div>
    </div>

    <ul class="sidebar-menu">
      <li class="header"><%= t('admin.sidebar.Navegación principal') %></li>
      <li> <%= link_to '<i class="fa fa-home"></i><span> Inicio</span>'.html_safe, home_index_path%> </li>
      <li> <%= link_to '<i class="fa fa-opencart"></i><span> Productos</span>'.html_safe, products_path %> </li>
      <li> <%= link_to '<i class="fa fa-check-square-o"></i><span> Productos en consumo</span>'.html_safe, requests_path %> </li>
      <%if current_user.rol == 1 %>
        <li class="header"><%= t('admin.sidebar.administration') %></li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-gears"></i>
            <span>Administración</span>
            <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
          </a>
          <ul class="treeview-menu">
            <li> <%= link_to '<i class="fa fa-database"></i><span> Mantenedor de Tablas</span>'.html_safe, codes_path %> </li>
          </ul>
        </li>
      <%end %>
    </ul>

  </section>
</aside>
